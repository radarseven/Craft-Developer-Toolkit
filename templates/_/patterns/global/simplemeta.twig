{% if entry is not defined %}
    {% set entry = craft.globals.getSetByHandle('fourOhFour') %}
    {% set isFourOhFour = true %}
{% endif %}


{# Title #}
{% macro metaTitle(entry) %}
{% spaceless %}
    {% if entry is empty or craft.request.firstSegment() == '' %}
        {{- siteName -}}
    {% else %}
        {% if entry.title is defined and entry.title is not empty %}
            {{- entry.title -}}
        {% endif %}
        {{- ' - ' ~ siteName -}}
    {% endif %}
{% endspaceless %}
{% endmacro %}
